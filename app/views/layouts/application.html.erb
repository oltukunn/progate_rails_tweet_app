<!DOCTYPE html>
<html>
  <head>
    <title>TweetApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    <% if @current_user%>
      <div class="header-logo">
        <%= link_to "TweetApp", posts_path(@current_user) %>
      </div>
    <% else %>
      <div class="header-logo">
        <%= link_to "TweetApp", "/" %>
      </div>
    <% end %>
    <ul class="header-menus">
      <% if @current_user %>
      <li><%= link_to @current_user.name, user_path(@current_user), method: :get %></li>
      <li><%= link_to "投稿一覧", posts_path , method: :get %></li>
      <li><%= link_to "新規投稿", new_post_path, method: :get %></li>
      <li><%= link_to "ユーザー一覧", users_path, method: :get %></li>
      <li><%= link_to "ログアウト", logout_path, method: :post %></li>
      <% else %>
      <li><%= link_to "TweetAppとは", "/about" %></li>
      <li><%= link_to "新規登録", new_user_path, method: :get %></li>
      <li><%= link_to "ログイン", login_path, method: :get %></li>
      <% end %>
    </ul>
    </header>
    <% if flash[:notice] %>
      <div class="flash"> 
        <%= flash[:notice] %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
