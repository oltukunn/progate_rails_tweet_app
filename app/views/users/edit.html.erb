<div class="main users-edit">
  <div class="container">
    <h1 class="form-heading">アカウント編集</h1>
    <div class="form users-form">
      <%= form_with model:@user , url:user_path(@user), method: :patch do |f| %>
      <div class="form-body">
      <% @user.errors.full_messages do |message| %>
        <div class="form-error"><%=message %></div>
      <% end %>
      <p>ユーザー名</p>
      <%= f.text_field :name %>
      <p>メールアドレス</p>
      <%= f.text_field :email %>
      <input type="submit" value="保存">
      </div>
      <% end %>
    </div>  
  </div>
</div>
